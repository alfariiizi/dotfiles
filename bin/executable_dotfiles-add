#!/usr/bin/python3

import subprocess

# List of directories
directories = [
    "~/.config/wezterm",
    "~/.config/hypr/UserConfigs",
    "~/.config/hypr/UserScripts",
    "~/.zshrc",
]

command = ['chezmoi', 'add']

# Function to run the command
def list_directory_contents(directory):
    try:
        subprocess.run([*command, directory], capture_output=True, check=True)
        print(f"Success add {directory}")
    except subprocess.CalledProcessError as e:
        print(f"Error add {directory}: {e.stderr}")

# Iterate over the directories and list their contents
for dir in directories:
    list_directory_contents(dir)
